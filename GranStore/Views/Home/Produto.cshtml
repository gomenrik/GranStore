@model Produto
@{
    ViewData["Title"] = "Detalhes dp Produto";
}

<section class="py-5">
    <div class="container my-5">
        <div class="row">
            <div class="col-md-5">
                <img src="="@Model.Foto" alt="Foto do Produto" class="img-fluid">
            </div>
            <div class="col-md-7">
                <div class="small mb-1"> Categoria: @Model.Categoria.Nome</div>
                <h1 class="display-5 fw-bolder">@Model.Nome</h1>
                <div class="fs-5 mb-5">
                    <span class="text-decoration-line-through">
                        R$ @((Model.ValorVenda * 1.05M).ToString("N2"))
                    </span>
                    R$ @Model.ValorVenda.ToString("N2")
                </div>
            </div>
        </div>
    </div>
</section>